" vim: set filetype=vim :
set cdpath=''

set toolbars=nonavigation
set scrollbars=false
set editor=nvim -f
set defsearch=google

" Fix for Ublock Origin and Umatrix's  popup ui not working with the url bar disabled
style -name ublick * #nav-bar * { visibility: visible; }

" Maps Tab and Shift Tab to cycle through buffers
noremap <Tab> :tabnext<CR>
noremap <S-Tab> :tabprevious<CR>

" Stops pentadactly from opening start page
nmap <C-j> <CR>
nmap <C-k> <CR>

" Unmaps the arrow keys
map <Up> <nop>
map <Down> <nop>
map <Left> <nop>
map <Right> <nop>

" Map : to ; (then remap ;) -- massive pinky-saver
noremap ; :
noremap <M-;> ;

" Map backspace to :back
noremap b :back <CR>
noremap <S-b> :forward <CR>

" Colors
highlight! CmdLine color: #CECFD1; background: #181818;
highlight! CmdLine>* font-family: "Droid Sans"; font-size: 8pt; height: 12px;
highlight! Normal color: #AAABAD; /*background: #181818;*/ font-family: "Droid Sans"; font-size: 8pt;
highlight! StatusLine color: #AAABAD; background: #181818; font-family: "Droid Sans"; font-size: 8pt;

highlight! Bell border: none; background: #323537;
highlight! Boolean color: #AAABAD;
highlight! CompDesc width: auto; color: #AAABAD;
highlight! CompItem>* height: auto; padding: 0 8px;
highlight! CompItem background: #323537;
highlight! CompItem[selected] color: #CECFD1; background: #17181A;
highlight! CompTitle background: #323537; font-family: "Droid Sans"; font-size: 10pt;
highlight! CompTitle>* color: #CECFD1; padding: 2px 8px;

highlight! Disabled color: #AAABAD;
highlight! Enabled color: #AAABAD;
highlight! ErrorMsg color: #F56C66; font-family: "Droid Sans"; font-size: 10pt;
highlight! Filter color: #CECFD1; background: #17181A;
highlight! FrameIndicator background: #AAABAD; opacity: 0.5; z-index: 999; position: fixed; top: 0; bottom: 0; left: 0; right: 0;

highlight! HelpNote color: #8859B3;
highlight! HelpWarning color: #B359A4;

highlight! Hint font-family: "Droid Sans"; font-size: 10pt; color: #CECFD1; background: #17181A; padding: 1px;
highlight! HintActive color: #AAABAD; background: #27282B;
highlight! HintElem background: transparent;
highlight! HintImage opacity: 0.5;

highlight! InfoMsg color: #AAABAD;
highlight! Keyword color: #AAABAD;
highlight! LineNr color: #AAABAD;
highlight! NonText color: #AAABAD;

highlight! ModeMsg color: #AAABAD; background: transparent; padding: 0 8px; font-family: "Droid Sans"; font-size: 10pt;
highlight! MoreMsg color: #AAABAD; font-family: "Droid Sans"; font-size: 10pt;

highlight! PromptText color: #AAABAD; padding-top: 4px;
highlight! Question color: #AAABAD;

highlight! Title color: #CECFD1;
highlight! WarningMsg color: #AAABAD;

