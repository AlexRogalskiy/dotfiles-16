# start applications

super + Return
    st

# Dmenu
super + d
    rofi -show run


# manipulate windows

super + button1
    xmmv

super + @button1
    pkill xmmv

super + button3
    wrs -a $(wmp) $(pfw)


# workspaces

super + {_,shift} + {1,2,3,4,5}
    workspace -{g,m} {1,2,3,4,5}

super + s
    tile

super + {Left,Right}
    snap {_,r}

super + c
    center

super + x
    initial

super + q
    killw $(pfw)

super + f
    fullscreen

alt + Tab
    focus next


# misc

{XF86AudioRaiseVolume,XF86AudioLowerVolume,XF86AudioMute}
    vol {5%+,5%-,toggle}

super + p
    scr

super + w
    wal -i ~/Pictures/Wallpapers/ -o wal-set --backend colorz

super + r
    pkill -USR1 -x sxhkd

