" vim: set filetype=vim :

" Default settings
loadplugins '\.(js|penta)$'
group user
set cdpath=''

" Hides everything but the tab bar
set go=

" Fix for Ublock Origin's popup ui not working with the url bar disabled
style -name ublick * #nav-bar * { visibility: visible; }

set incfind
set findcase=smart

set scrollsteps=1
set scrolltime=0

" Maps Ctrl Right + Left arrows to cycle through tabs
nmap <C-h> :tabprevious<CR>
nmap <C-l> :tabnext<CR>

" Stops pentadactly from opening start page
nmap <C-j> <CR>
nmap <C-k> <CR>

map -b j 8j
map -b k 8k
map -b h 8h
map -b l 8l

" Unmaps the arrow keys
map <Up> <nop>
map <Down> <nop>
map <Left> <nop>
map <Right> <nop>

" Map : to ; (then remap ;) -- massive pinky-saver
noremap ; :
noremap <M-;> ;

