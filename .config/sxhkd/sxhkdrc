# bspwm hotkeys

super + q
	bspc window -c

# Toggle options
super + {s,f,e,p}
	bspc window -t {floating,fullscreen,sticky,pseudo_tiled}

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + Tab
	bspc desktop -f next

# i3 like bindings for opening windows down and right
super + {v,g}
	bspc window -p {down,right}

# Move windows between desktops
super + {_,shift + } {1-9}
	bspc {desktop -f,window -d} {1-9}

# Focus windows
~button1
	bspc pointer -g focus

# Resize windows with mouse
super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u

# Reducing gap on the fly
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# Reload sxhkdkasdsad config
super + Escape
	pkill -USR1 -x sxhkd &&

# alt + tab
alt + Tab
	bspc window -f next

# Open Terminal
super + Return
	urxvt
	# ~/dotfiles/scripts/bspwm/urxvt.sh &

# Dmenu
super + d
	dmenu_recent_aliases -l 5 -o 0.9 -nb "#$black" -nf "#$cyan" -sb "#$white" -sf "#$black" -i -h 20 -w 100 -x 10 -y 30 -fn "-benis-lemon-medium-r-normal--10-110-75-75-m-50-iso8859-1"

super + F12
	scrot

# Change wallpaper to random image from folder
super + w
	~/dotfiles/scripts/wallpaper2.sh


