# bspwm hotkeys

super + shift + Escape
	bspc quit; \
	pkill lemonbar; \
	pkill bar.sh

super + q
	bspc window -c

super + m
	bspc desktop -l next

super + {s,f}
	bspc window -t {floating,fullscreen}

super + apostrophe
	bspc window -s last

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + Tab
	bspc desktop -f next

super + v
	bspc window -p down

super + g
	bspc window -p right

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u

# Reducing gap on the fly
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# Sticky windows
super + e
    bspc window -t sticky

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd &&

# wm independent hotkeys

super + Return
	urxvt
	#-lsp 1

super + d
	dmenu_run -l 5 -o 0.9 -nb '#080808' -nf '#a3a69a' -sb '#2d4963' -i -h 20 -w 100 -x 10 -y 30 -fn '-benis-lemon-medium-r-normal--10-110-75-75-m-50-iso8859-1'

# Laptop hotkeys
XF86MonBrightnessUp
	xbacklight -inc 40

XF86MonBrightnessDown
	xbacklight -dec 40

XF86AudioMute
	amixer set Master toggle

XF86AudioLowerVolume
	amixer set Master 5%-

XF86AudioRaiseVolume
	amixer set Master 5%+

XF86AudioPrev
	mpc prev

XF86AudioPlay
	mpc toggle

XF86AudioNext
	mpc next
