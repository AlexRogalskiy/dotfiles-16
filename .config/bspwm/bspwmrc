#! /bin/sh

bspc config border_width		0
bspc config window_gap         20

bspc config split_ratio         0.50
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focus_follows_pointer true
bspc config initial_polarity second_child

bspc config -m DFP10 top_padding 25
bspc config -m eDP1 top_padding 25

bspc monitor DFP10 -d www code game video
bspc monitor eDP1 -d www code game video

bspc rule -a Firefox desktop=www follow=no

bspc rule -a Steam desktop=game follow=no

# Sets different shadow excludes based on monitor height
if [[ $(xrandr | awk '/DFP10/ {print $1}') == "DFP10" ]]; then
	compton -b --config ~/.compton --shadow-exclude-reg x875+0-0 &

elif [[ $(xrandr | awk '/eDP1/ {print $1}') == "eDP1" ]]; then
	compton -b --config ~/.compton --shadow-exclude-reg x743+0-0 &

else
	compton -b --config ~/.compton
fi

feh --bg-tile ~/.dotfiles/wallpapers/1.jpe &
~/.config/lemonbar/bar.sh &

