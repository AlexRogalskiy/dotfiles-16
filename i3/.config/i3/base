# Dylan's i3 Config.


# GENERAL {{{


set $mod Mod4
floating_modifier $mod

# Set colors from Xresources
set_from_resource $bg  i3wm.color1  #f0f0f0
set_from_resource $fg  i3wm.color15 #f0f0f0

# class                 border  backgr. text indicator child_border
client.focused          $bg      $bg    $fg  $bg   $bg
client.focused_inactive $bg      $bg    $fg  $bg   $bg
client.unfocused        $bg      $bg    $fg  $bg   $bg
client.urgent           $bg      $bg    $fg  $bg   $bg
client.placeholder      $bg      $bg    $fg  $bg   $bg
client.background       $bg


# }}}


# KEYBINDS {{{


# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+g split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s floating toggle
bindsym $mod+c move position center
bindsym $mod+e sticky toggle
bindsym $mod+b border pixel 5
bindsym $mod+n border normal 0

bindsym $mod+1 workspace number 1 www
bindsym $mod+2 workspace number 2 cod
bindsym $mod+3 workspace number 3 gam
bindsym $mod+4 workspace number 4 jun
bindsym $mod+5 workspace number 5 scr
bindsym $mod+6 workspace number 6 mov

bindsym $mod+Shift+1 move container to workspace number 1 www
bindsym $mod+Shift+2 move container to workspace number 2 cod
bindsym $mod+Shift+3 move container to workspace number 3 gam
bindsym $mod+Shift+4 move container to workspace number 4 jun
bindsym $mod+Shift+5 move container to workspace number 5 scr
bindsym $mod+Shift+6 move container to workspace number 6 mov

bindsym $mod+Return exec urxvtc
bindsym $mod+q kill
bindsym $mod+d exec rof
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+p exec scr

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Audio Controls
bindsym XF86AudioRaiseVolume exec --no-startup-id "vol up &"
bindsym XF86AudioLowerVolume exec --no-startup-id "vol down &"
bindsym XF86AudioMute exec --no-startup-id "vol mute &"

# Media player controls
bindsym XF86AudioPlay exec "song toggle"
bindsym XF86AudioNext exec "song next"
bindsym XF86AudioPrev exec "song prev"

# Cycle wallpapers
bindsym $mod+w exec "wal -i ${HOME}/Pictures/Wallpapers -o wal-set"


# }}}


# WINDOW RULES {{{


for_window [class="^.*"] border normal 0
for_window [class="VirtualBox"] floating enable


# }}}


# PROGRAM AUTOSTART. {{{


exec "wal -i $(< ${HOME}/.cache/wal/wal) -o wal-set"


# }}}

