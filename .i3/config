# Other



smart_borders on
# smart_gaps on

for_window [class="^.*"] border pixel 0
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
# for_window [class="Steam"] floating enable
# for_window [title="Steam" class="Steam"] floating enable

# Commands below are executed on i3 start
exec_always --no-startup-id feh --bg-tile /home/dylan/Pictures/6.png
# exec_always --no-startup-id xsetroot -solid "#5ED3FF"

exec_always pkill lemonbar

exec_always ~/.config/lemonbar/czaugk.sh | ~/.config/lemonbar/bar.sh

exec_always --no-startup-id compton -b --config ~/.compton


# Remove all outlines
client.focused           #FFFFFF #FFFFFF #FFFFFF #FFFFFF
client.focused_inactive  #4298B8 #4298B8 #4298B8 #4298B8
client.unfocused         #4298B8 #4298B8 #4298B8 #4298B8
client.urgent            #4298B8 #4298B8 #4298B8 #4298B8

# Gaps
gaps inner 20
