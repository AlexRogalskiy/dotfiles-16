# Dylan's zsh aliases and functions

# Aliases {{{

# Remove orphaned package dependencies
alias cleandeps='sudo pacman -Rns $(pacman -Qtdq)'

# Download youtube url to an .mp3
# and save it to my music folder.
alias mp3dl="cd $HOME/Music && youtube-dl --extract-audio --audio-format mp3 --no-playlist"

# Creates a playlist from an ls of my Music Folder
alias lsnc="ls -A --color=none"
alias plu="lsnc $HOME/Music > $HOME/.mpd/playlists/music.m3u"

# pwd
alias pwd.sh="cd $HOME/pwd.sh && ./pwd.sh"

# Makes ls list all files and always use color
alias ls="export LC_COLLATE="C"; ls -A --color=always --group-directories-first"

# Save all screenshots to ~/Pictures
alias scrot="cd $HOME/Pictures/ && scrot"

alias imv="imv -b #$black"

# Launch steam with options that allow sound/mic to work without
# Pulse audio.
alias steam="LD_PRELOAD=/usr/lib/libasound.so.2 STEAM_RUNTIME=1 SDL_AUDIODRIVER=alsa steam"

# urxvt
alias urxvt="urxvtc"

# hdmi audio mpv
alias mpv-hdmi="mpv --audio-device=alsa/hw:1,3"

# Start gimp with a different gtkrc as it crashes when a bitmap font is used
alias gimp="GTK2_RC_FILES=~/gimp.gtkrc gimp"

# backup files on poweroff
alias poweroff="backup.sh; poweroff"

# Create vim colorscheme on open
alias nvim="erb -T - ~/dotfiles/colorschemes/ryuuko/ryuuko.erb > ~/dotfiles/colorschemes/ryuuko/colors/ryuuko.vim && nvim"

# }}}

# Functions {{{

# ls on every cd
function chpwd() {
  ls
}

# Do maths in the terminal
= () {
    calc="${@//p/+}"
    calc="${calc//x/*}"
    echo "$(($calc))"
}

